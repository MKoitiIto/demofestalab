<p style="color: green"><%= notice %></p>

<h1>Search for a User</h1>
<%= form_with(url: users_path, method: "get") do |form| %>
  <%= form.text_field :search_name, placeholder: "nome do usu치rio" %>
  <%= form.submit "Search" %>
<% end %>
<%= form_with(url: users_path, method: "get") do |form| %>
  <%= form.text_field :search_email, placeholder: "email do usu치rio" %>
  <%= form.submit "Search" %>
<% end %>
<%= form_with(url: users_path, method: "get") do |form| %>
  <%= form.text_field :search_phone, placeholder: "telefone do usu치rio" %>
  <%= form.submit "Search" %>
<% end %>
<%= form_with(url: users_path, method: "get") do |form| %>
  <%= form.text_field :search_cpf, placeholder: "cpf do usu치rio" %>
  <%= form.submit "Search" %>
<% end %>

<% if flash[:alert] %>
  <h2>Search Results:</h2>
  <div class="alert alert-danger">
    <%= flash[:alert] %>
  </div>
<% end %>

<% if @user %>
  <h2>Search Results:</h2>
  <% if @user.present? %>
    <p>Name: <%= @user.name %></p>
    <p>Email: <%= @user.email %></p>
    <p>Phone: <%= @user.phone %></p>
    <p>Cpf: <%= @user.cpf %></p>
    <%= link_to "View User", @user %>
  <% end %>
<% end %>

<h1>List of Users</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Email</th>
      <th>Phone</th>
      <th>CPF</th>
    </tr>
  </thead>
  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= user.name %></td>
        <td><%= user.email %></td>
        <td><%= user.phone %></td>
        <td><%= user.cpf %></td>
        <td><%= link_to "View User",  user %></td>
      </tr>
      
    <% end %>
  </tbody>
</table>

